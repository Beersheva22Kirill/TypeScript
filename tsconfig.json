{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build", //Директория для JS кода
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib":["ES2015", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}